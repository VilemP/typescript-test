{
  "extends": "tslint:latest",
  "rules": {
    "ordered-imports": false, // it somehow shows strange results when set to true (?)
    "quotemark": [true, "single"],
    "variable-name": [true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}